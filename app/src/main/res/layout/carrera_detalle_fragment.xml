<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarreraDetalle.carreraDetalle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_Facultad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/unse" />

            <TextView
                android:id="@+id/tv_nombreCarreras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_Mapa"
                        android:layout_width="30dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_dialog_map" />

                    <TextView
                        android:id="@+id/tv_Ubicacion"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_Telefono"
                        android:layout_width="30dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@android:drawable/stat_sys_speakerphone" />

                    <TextView
                        android:id="@+id/tv_Contacto"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_Web"
                        android:layout_width="30dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_share" />

                    <TextView
                        android:id="@+id/tv_Web"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:autoLink="web"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_Duracion"
                        android:layout_width="30dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_recent_history" />

                    <TextView
                        android:id="@+id/tv_Duracion"
                        android:layout_width="250dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="30sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_perfilProfesional"
                    android:textSize="24sp" />
                <EditText
                    android:id="@+id/txtarea_PerfilProfesional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />

                <Button
                    android:id="@+id/btnmap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VER MAPA" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>