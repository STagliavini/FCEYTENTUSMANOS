<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containdu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_du">
<LinearLayout
        android:id="@+id/lagen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_call_black_24dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agenda Telefonica"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:translationY="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lcalendario"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_picture_as_pdf_black_24dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calendario Academico"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:translationY="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lhorarios"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_schedule_black_24dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Horarios de Clases"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:translationY="35dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lsiu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_language_black_24dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/asiu"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:translationY="30dp" />
    </LinearLayout>
</LinearLayout>